generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  name          String    @id @unique
  password      String
  projects      Project[] @relation("ProjectManager")
  tasksCreated  Task[]    @relation("TaskAuthor")
  tasksAssigned Task[]    @relation("TaskDoer")
  accesses      Access[]  @relation("AccessEmployee")
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  manager     User     @relation(fields: [managerName], references: [name], name: "ProjectManager")
  managerName String
  tasks       Task[]
  accesses    Access[]
}

model Access {
  assignee     User    @relation(fields: [assigneeName], references: [name], name: "AccessEmployee")
  assigneeName String
  project      Project @relation(fields: [projectId], references: [id])
  projectId    Int
  accessType   String

  @@id([assigneeName, projectId])
}

model Task {
  id           Int     @id @default(autoincrement())
  title        String
  description  String?
  project      Project @relation(fields: [projectId], references: [id])
  projectId    Int
  effort       Int
  status       Int     @default(0)
  author       User    @relation(fields: [authorName], references: [name], name: "TaskAuthor")
  authorName   String
  assignee     User    @relation(fields: [assigneeName], references: [name], name: "TaskDoer")
  assigneeName String
}
